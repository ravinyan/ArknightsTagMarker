<Window x:Class="ArknightsTagMarker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArknightsTagMarker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Topmost="True"
        Background="Transparent" BorderBrush="Transparent" BorderThickness="2">
    <Grid x:Name="MainGrid">
        <!--- first and last row/col are the borders, stuff in middle will contain tag boxes -->
        <Grid.RowDefinitions>
            <RowDefinition x:Name="MainGridBorderTop"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition x:Name="MainGridBorderBottom"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MainGridBorderLeft" />
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition x:Name="MainGridBorderRight"/>
        </Grid.ColumnDefinitions>

        <Canvas Name="CanvasBox">
            <Grid x:Name="TagsAvailable">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TextBox4StarTags" Grid.Row="0" Background="black" Foreground="White" FontWeight="Bold" TextWrapping="Wrap" FontSize="11" FontFamily="Cascadia Mono" Text="4* Tags: "></TextBlock>
                <TextBlock x:Name="TextBox5StarTags" Grid.Row="1" Background="black" Foreground="White" FontWeight="Bold" TextWrapping="Wrap" FontSize="11" FontFamily="Cascadia Mono" Text="5* Tags: "></TextBlock>
                <Button x:Name="CloseAppButton" Click="CloseAppButtonClick" Grid.Column="1">
                    <TextBlock TextWrapping="Wrap">Close</TextBlock>
                </Button>
            </Grid>
        </Canvas>
 
    </Grid>
</Window>
